{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "MERN/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "MERN/dist" // Ensure this matches the Vite build output directory
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/index.js" },
      { "src": "/(.*)", "dest": "/MERN/dist/$1" }
    ]
  }
  